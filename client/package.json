{
  "name": "@tardigrades/client",
  "version": "0.0.1",
  "description": "Deprecated JS API (formerly Laguna Finance Cove Client API)",
  "homepage": "https://tardigrades.online",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "test": "jest --config jest.config.js",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "jest": "^26.6.3",
    "prettier": "2.3.0",
    "ts-jest": "^26.5.6",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "@solana/spl-token": "^0.1.4",
    "@solana/web3.js": "^1.13.1",
    "assert": "^2.0.0",
    "bip39": "^3.0.4",
    "buffer-layout": "^1.2.1",
    "dotenv": "^13.0.1",
    "ed25519-hd-key": "^1.2.0",
    "tweetnacl": "^1.0.3"
  }
}
